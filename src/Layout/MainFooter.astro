---
import Nav from '../Components/Nav.astro';

import links from '../Data/footerLinks';
---

<!--The last part of the page. Buff!-->
<footer class="footer">
  <div class="footer__division">
    <a class="footer__home" href="/">LD</a>
    <div class="footer__socials">
      <small class="footer__P">Follow her on Social Media</small>
      <img
        class="footer__image"
        src="/logos/instagram.png/"
        alt="insttgram logo icon"
      />
      <img
        class="footer__image"
        src="/logos/twitter.png/"
        alt="instagram logo icon"
      />
    </div>
  </div>
  <div class="footer__division">
    {
      links.map((link) => (
        <div class="footer__nav">
          <h4 class="footer__h4">{link.h4}</h4>
          <ul class="footer__ul">
            <li class="footer__li">
              <a href="#">{link.name}</a>
            </li>
            <li class="footer__li">
              <a href="#">{link.name2}</a>
            </li>
            <li class="footer__li">
              <a href="#">{link.name3}</a>
            </li>
          </ul>
        </div>
      ))
    }
  </div>
  <div id="copyright" class="footer__division">
    <small class="footer__p">
      <span id="copyright">2023</span>. Every right reserved to the creator of
      the web page.
    </small>
  </div>
</footer>
<!--The 2 PART -->

<style>
  .footer {
    display: grid;
    grid-template-columns: 1fr;
  }

  .footer__division,
  .footer__socials,
  .footer__nav {
    display: flex;
    color: white;
  }
  .footer__division,
  .footer__socials {
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    padding: 3rem 1rem;
  }
  .footer__division {
    border-bottom: 0.5px solid hsl(0, 0%, 90%);
  }

  .footer__home {
    font-size: 2rem;
    font-weight: 900;
    font-family: 'Dosis', sans-serif;
    font-style: italic;
    cursor: pointer;
    color: hsl(0, 0%, 80%);
  }
  .footer__image {
    width: 2rem;
    aspect-ratio: 1;
    filter: invert(2);
  }
  .footer__nav {
    flex-direction: column;
  }

  .footer__li a {
    color: hsl(0, 0%, 80%);
  }
</style>
