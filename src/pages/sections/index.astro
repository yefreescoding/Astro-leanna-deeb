---
// import Layouts
import PostCard from '../../Components/PostCard.astro';
import MainLayout from '../../Layout/MainLayout.astro';
import Main from '../../Components/Main.astro';

// import components
import Links from '../../Components/Links.astro';

// Importan information about the page
const MainTitle = 'Routines';

const PageDescription =
  'All the great routines summatized in this page. Go check them out!';

const image = '/hero-img/hero-exercises.png';
//

const allPosts = await Astro.glob("./*.md"); 

console.log(allPosts);
---

<MainLayout title="Blog">
  <Main {MainTitle} {PageDescription} {image} />
  {allPosts.map((post) => <PostCard {post} />)}
  <Links text="Post 1" href="./post-1/" style="link--1" />
</MainLayout>
