---
// import Layouts
import PostCard from '../../Components/PostCard.astro';
import MainLayout from '../../Layout/MainLayout.astro';
import Main from '../../Components/Main.astro';
import ServiceSection from '../../Components/ServiceSection.astro';

// Importan information about the page
const MainTitle = 'Routines';

const PageDescription =
  'All the great routines summatized in this page. Go check them out!';

const image = '/hero-img/hero-exercises.png';

const allPosts = await Astro.glob('./*.md');
---

<MainLayout title="Routines">
  <Main {MainTitle} {PageDescription} {image} />
  <ServiceSection sectionTitle="Workouts">
    {
      allPosts.map((post) => (
        <PostCard frontmatter={post.frontmatter} url={post.url} />
      ))
    }
  </ServiceSection>
</MainLayout>
