---
import Links from './Links.astro';

const { frontmatter, url } = Astro.props;

const { title, description, date, category, author, image, link } = frontmatter;
---

<article class="card">
  <h2 class="card__h2">
    {title}
  </h2>
  <img class="card__image" src={image.src} alt={image.alt} />
  <div class="card__text">
    <span class="card__date">{date}</span>
    <p class="card__p">{description}</p>
    <Links text="Train with me!" href={url} style="link--2" />
  </div>
</article>

<style>
  .card,
  .card__text {
    display: flex;
    flex-flow: column;
    row-gap: 0.5rem;
  }
  .card {
    background-color: hsl(0, 0%, 95%);
    transition: all 0.24s linear;
    border-radius: 1rem;
    overflow: hidden;
    padding: 1.5rem;
  }
  .card__image {
    aspect-ratio: 1;
    object-fit: cover;
  }
  .card__date {
    font-weight: 600;
    color: hsl(0, 0%, 60%);
  }
  .workouts__containers:hover {
    transform: scale(1.05, 1.05);
  }
</style>
